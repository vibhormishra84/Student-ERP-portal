<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar.ejs')%>
<%- include('../partials/flash.ejs')%>
<div class="row">
        <div class="col-lg-6 mt-3">
            <div class="card shadow mx-auto" style="width: 18rem;">
                <img src="<%=foundSubject.img %>" class="card-img-top" alt="...">
                <div class="card-body">
                <h3 class="card-title">Name: <%=foundSubject.name%></h3>
                <h5 class="card-price">Credits: <%=foundSubject.Credits%></h5>
                <h5 class="card-hours">Contact Hours: <%=foundSubject.ContactHours%></h5>
                <p class="card-text"><%=foundSubject.desc%></p>
                <a href="/subjects/<%=foundSubject._id%>/edit" class="btn btn-light">Edit</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <h1 class="display-5">Leave a Review</h1>
            <form action='/subjects/<%=foundSubject._id%>/review' method="post">
                <div>
                  <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="rating" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="rating" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="rating" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="rating" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="rating" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="comment">Comment:</label>
                  <textarea class="form-control" name="comment" id="comment" rows="3"></textarea>
                </div>
                <button class="btn btn-sm btn-success">Add Review</button>
            </form>
            <div class="my-3">
                <% for(let review of foundSubject.reviews){%>
                    <div class="card mt-3">
                        <p class="card-title mx-2">
                            <%if(review.createdAt){%>
                              <%=review.createdAt.toDateString()%>
                            <%}%>
                        </p>
                        <p class="starability-result" data-rating="<%=review.rating%>">
                            Rated: <%=review.rating%> stars
                        </p>
                        <div class="card-body">
                            <p class="card-text">Comment: <%=review.comment%></p>
                        </div>
                    </div>
                <% }%>
            </div>
        </div>
</div>
</body>
</html>

